<?xml version="1.0" encoding="utf-8"?>
<acs.utils.AcsBox xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:acs="http://schemas.android.com/apk/res-auto"
    android:id="@+id/box"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF"
    acs:bgColor="#333"
    acs:loadingColor="#FFF"
    acs:iconSize="200dp"
    acs:iconColor="#f00"
    acs:font="fonts/general.ttf"
    acs:titleColor="#FFFFFF"
    acs:errorSubtitle="Se ha producido un error con texto largo y este debe estar centrado de forma horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <acs.utils.AcsButton
                android:id="@+id/btn_circle"
                android:layout_width="50dp"
                android:layout_height="50dp"
                acs:ab_bgColor="#3FA75A"
                acs:ab_bgColorFocus="#399651"
                acs:ab_radius="25dp"
                acs:ab_icon="@drawable/ic_like"
                acs:ab_iconSize="20dp"
                acs:ab_borderWidth="2dp"
                acs:ab_borderColor="#399651"/>

            <acs.utils.AcsButton
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                acs:ab_bgColor="#39579B"
                acs:ab_bgColorFocus="#193574"
                acs:ab_text="Login"
                acs:ab_textBold="true"
                acs:ab_radius="5dp"
                acs:ab_icon="@drawable/ic_facebook"
                acs:ab_iconSize="20dp"
                acs:ab_iconTop="true"
                acs:font="fonts/general.ttf"/>

            <acs.utils.AcsButton
                android:id="@+id/btn_circle_text"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:elevation="3dp"
                acs:ab_bgColor="#3FA75A"
                acs:ab_bgColorFocus="#000"
                acs:ab_bgColorDisabled="#00F"
                acs:ab_radius="60dp"
                acs:ab_icon="@drawable/ic_car"
                acs:ab_iconSize="35dp"
                acs:ab_iconTop="true"
                acs:ab_iconColor="#FFFFFF"
                acs:ab_iconMarginBottom="0dp"
                acs:ab_text="Normal"
                acs:ab_textSize="9dp"
                acs:ab_textAllCaps="true"
                acs:ab_borderWidth="4dp"
                acs:ab_borderColor="#FFFFFF"
                acs:ab_borderColorDisabled="#F00"/>

        </LinearLayout>

        <acs.utils.AcsButton
            android:id="@+id/btn_ligth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            acs:ab_bgColor="#F6F7F9"
            acs:ab_bgColorFocus="#E9EBEE"
            acs:ab_text="Login with Facebook for more lines and text large"
            acs:ab_textBold="true"
            acs:ab_textColor="#575757"
            acs:ab_textSingleLine="true"
            acs:ab_radius="5dp"
            acs:ab_loadingColor="#39579B"
            acs:ab_icon="@drawable/ic_facebook"
            acs:ab_iconColor="#575757"
            acs:ab_iconSize="20dp"
            acs:ab_iconMarginRight="10dp"
            acs:ab_borderWidth="1dp"
            acs:ab_borderColor="#CED0D4"/>

        <acs.utils.AcsButton
            android:id="@+id/btn_disabled"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            acs:ab_bgColor="#39579B"
            acs:ab_bgColorFocus="#193574"
            acs:ab_text="Disabled"
            acs:ab_textBold="true"
            acs:ab_radius="25dp"
            acs:ab_icon="@drawable/ic_facebook"
            acs:ab_iconSize="20dp"
            acs:ab_iconMarginRight="10dp"/>

        <acs.utils.AcsButton
            android:id="@+id/btn_left"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            acs:ab_centered="false"
            acs:ab_bgColor="#39579B"
            acs:ab_bgColorFocus="#193574"
            acs:ab_text="Aligned left wing and surpassing the maximum of lines to prove"
            acs:ab_textSingleLine="true"
            acs:ab_textAllCaps="true"
            acs:ab_radius="5dp"
            acs:ab_icon="@drawable/ic_facebook"
            acs:ab_iconSize="20dp"
            acs:ab_iconMarginRight="10dp"
            acs:font="fonts/general.ttf"/>

        <Button
            android:id="@+id/load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Load Content"/>

        <Button
            android:id="@+id/toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Toast"/>

        <acs.utils.AcsLock
            android:id="@+id/lock_status"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="6dp"
            acs:al_radius="25dp"
            acs:al_borderWidth="6dp"
            acs:al_borderColorOff="#000"
            acs:al_thumbWidth="100dp"
            acs:al_thumbBgColorOff="#FFF"
            acs:al_thumbTextColorOff="#000"
            acs:al_thumbTextColorOn="#00F"
            acs:al_thumbTextOff="Offline"
            acs:al_thumbTextOn="Online"
            acs:al_thumbBorderWidth="2dp"
            acs:al_thumbBorderColorOff="#F00"
            acs:al_thumbPaddingLeft="10dp"
            acs:al_thumbPaddingRight="10dp"
            acs:al_tolerance="10dp"
            acs:font="fonts/general.ttf"/>

        <acs.utils.AcsLock
            android:id="@+id/lock_nav"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:padding="3dp"
            android:elevation="1dp"
            acs:al_radius="20dp"
            acs:al_bgColorOff="#00BE3E"
            acs:al_bgColorOn="#777"
            acs:al_thumbBgColorOff="#FFF"
            acs:al_thumbBgColorOn="#00FFFFFF"
            acs:al_thumbTextColorOff="#00BE3E"
            acs:al_thumbTextColorOn="#FFF"
            acs:al_thumbTextOn=""
            acs:al_thumbTextOff="Start"
            acs:al_thumbTextSize="12sp"
            acs:al_thumbIconOff="@drawable/ic_chevron_right"
            acs:al_thumbIconOn="@drawable/ic_loading"
            acs:al_thumbIconColorOff="#00BE3E"
            acs:al_thumbIconColorOn="#FFF"
            acs:al_thumbIconSize="10dp"
            acs:al_thumbIconSizeOn="36dp"
            acs:al_thumbIconMrgLeftOff="10dp"
            acs:al_thumbIconMrgRightOff="20dp"
            acs:al_thumbIconMrgRightOn="0dp"
            acs:al_thumbPaddingLeft="20dp"
            acs:al_thumbPaddingRight="0dp"/>

    </LinearLayout>

</acs.utils.AcsBox>